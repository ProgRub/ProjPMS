<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@drawable/edit_text_background"
            android:layout_width="340dp"
            android:layout_height="160dp">

            <TextView
                android:id="@+id/sighting_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="13dp"
                android:text="Sighting ##"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/not_submitted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/sighting_number"
                android:text="@string/notSubmitted"
                android:textColor="@color/notSubmitted"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/edit_sighting_btn"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="80dp"
                android:background="@drawable/editsighting_btn"
                android:clickable="true">

            </ImageButton>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sighting_number"

                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/dateRS"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sighting_number"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/textView3"
                android:text="00/00/0000"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sighting_number"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/date"
                android:text="@string/timeRS"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sighting_number"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/textView5"
                android:text="00:00"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"

                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/sightingSpeciesRS"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sighting_species"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@+id/textView7"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Example that shows off the elipsis"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"

                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/reportedBy"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reported_by"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="19dp"
                android:layout_toEndOf="@+id/textView9"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Mara Dionisio"
                android:textColor="@color/black"
                android:textSize="14dp" />
        </RelativeLayout>
    </LinearLayout>