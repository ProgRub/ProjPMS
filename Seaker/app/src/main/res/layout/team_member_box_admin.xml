<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="vertical">

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="130dp"
        android:background="@drawable/team_member_box">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="18dp"
            android:text="Member's Name"
            android:textColor="@color/black"
            android:textSize="14dp"></TextView>

        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="73dp"
            android:layout_marginTop="42dp"
            android:text="Member's Email"
            android:textColor="@color/black"
            android:textSize="15dp"></TextView>

        <TextView
            android:id="@+id/user_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="66dp"
            android:text="Member's Password"
            android:textColor="@color/black"
            android:textSize="15dp"></TextView>

        <TextView
            android:id="@+id/user_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="89dp"
            android:text="Member Type"
            android:textColor="@color/black"
            android:textSize="15dp"></TextView>

        <ImageButton
            android:id="@+id/remove_member_btn"
            android:layout_width="54dp"
            android:layout_height="110dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:text="Member Type"></ImageButton>

    </RelativeLayout>

</LinearLayout>