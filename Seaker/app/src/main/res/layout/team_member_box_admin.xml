<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="380dp"
android:layout_height="143dp"
android:orientation="vertical">

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="143dp"
        android:background="@drawable/team_member_box">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="87dp"
            android:layout_marginTop="20dp"
            android:text="Member's Name"
            android:textColor="@color/black"
            android:textSize="15dp"></TextView>

        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="82dp"
            android:textColor="@color/black"
            android:layout_marginTop="47dp"
            android:textSize="15dp"
            android:text="Member's Email">
        </TextView>

        <TextView
            android:id="@+id/user_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="75dp"
            android:textSize="15dp"
            android:text="Member's Password"
            android:textColor="@color/black"></TextView>

        <TextView
            android:id="@+id/user_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="112dp"
            android:layout_marginTop="99dp"
            android:textSize="15dp"
            android:text="Member Type"
            android:textColor="@color/black"></TextView>

        <ImageButton
            android:id="@+id/remove_member_btn"
            android:layout_width="54dp"
            android:layout_height="120dp"
            android:layout_marginLeft="315dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:text="Member Type"></ImageButton>

    </RelativeLayout>

</LinearLayout>