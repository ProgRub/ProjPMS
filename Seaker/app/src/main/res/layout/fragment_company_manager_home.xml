<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/manager_main_screen"
    tools:context=".fragments.CompanyManagerHomeFragment">

    <ImageButton
        android:id="@+id/buttonCreateReport"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@drawable/createreport_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        app:layout_constraintVertical_bias="0.367"></ImageButton>

    <ImageButton
        android:id="@+id/buttonAllMembersCM"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/allteammembers_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@+id/buttonCreateReport"
        app:layout_constraintVertical_bias="0.0"></ImageButton>

    <ImageButton
        android:id="@+id/buttonReportedSightingsCM"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/reportedsightings_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@+id/buttonAllMembersCM"
        app:layout_constraintVertical_bias="0.0"></ImageButton>

    <ImageButton
        android:id="@+id/buttonLogoutCM"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/logoutbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonReportedSightingsCM"
        app:layout_constraintVertical_bias="0.0"></ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>